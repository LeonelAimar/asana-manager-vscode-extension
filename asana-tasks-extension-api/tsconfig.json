{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "esnext",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "outDir": "./",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
        "node_modules/**"
    ]
}